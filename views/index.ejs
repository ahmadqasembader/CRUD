<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

	}

	body {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		background-color: #bebbbb;
	}

	label,
	input,
	button {
		display: block;
		font-size: 1.5rem;
		font-weight: 500;


	}

	h1 {
		padding: .5em 1em;
	}

	.login {
		background-color: rgb(99, 156, 167);

		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}

	form {
		padding: 1em 3em 2em;
	}

	label {
		margin: 0 auto .3em;
		color: #fff;
	}

	input {
		border-radius: 3px;
		border: none;
		outline: none;
		padding: .2em .4em;
	}

	button {
		margin: .6em auto .4em;
		padding: .2em 38%;
		color: #fff;
		border: none;
		border-radius: 4px;
		background-color: rgb(78, 39, 187);
		cursor: pointer;
		transition: background-color .5s;
	}

	button:hover,
	button:focus {
		background-color: rgb(50, 26, 116);
	}


	a {
		display: block;
		text-align: right;
		margin-right: .5em;
		color: rgb(78, 39, 187);
		text-decoration: none;
	}

	a:hover {
		color: rgb(50, 26, 116);
		text-decoration: underline;
	}
</style>